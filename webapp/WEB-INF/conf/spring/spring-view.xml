<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd ">

    <bean class="org.springframework.web.servlet.view.tiles3.TilesViewResolver" p:order="1"/>

    <bean class="org.springframework.web.servlet.view.UrlBasedViewResolver"
          p:viewClass="org.springframework.web.servlet.view.JstlView"
          p:prefix="/WEB-INF/jsp/pages/"
          p:suffix=".jsp"
          p:order="2" />

    <bean id="jacksonJsonView" name="jsonTemplate" class="org.springframework.web.servlet.view.json.MappingJackson2JsonView">
        <property name="contentType"    value="application/json;charset=UTF-8" />
    </bean>

</beans>